<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">RSVP</h4>
    </div>
    <div class="modal-body">
      <p>Please type your name as it appears on your invitation.</p>
      {{input type="text" value=invitee size="50"}}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" {{action "submitInvitee" invitee}}>Next</button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
